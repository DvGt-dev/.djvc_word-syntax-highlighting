{
  "name": "DJVC Theme",
  "type": "dark",
  "colors": {
    "editor.foreground": "#808080",
    "editor.background": "#1E1E1E"
  },
  "tokenColors": [
    // Base text style
    {
      "scope": [
        "source.djvc",
        "text.djvc",
        "meta.embedded.block.djvc",
        "meta.paragraph.djvc"
      ],
      "settings": {
        "foreground": "#808080", // couleur générale
        "fontStyle": ""
      }
    },

    // Quotes styling
    {
      "scope": "punctuation.definition.string.begin.djvc",
      "settings": {
        "foreground": "#cbb9b9"
      }
    },
    {
      "scope": "punctuation.definition.string.end.djvc",
      "settings": {
        "foreground": "#FFD700"
      }
    },
    {
      "scope": "string.quoted.content.djvc",
      "settings": {
        "foreground": "#FFFF00"
      }
    },
    {
      "scope": "punctuation.french.quote.begin.djvc",
      "settings": {
        "foreground": "#FFFF00"
      }
    },
    {
      "scope": "punctuation.french.quote.end.djvc",
      "settings": {
        "foreground": "#FF69B4"
      }
    },
    {
      "scope": "string.french.quote.content.djvc",
      "settings": {
        "foreground": "#FF00FF"
      }
    },

    // Parentheses styling
    {
      "scope": "punctuation.definition.group.begin.djvc",
      "settings": {
        "foreground": "#FF00FF"
      }
    },
    {
      "scope": "punctuation.definition.group.end.djvc",
      "settings": {
        "foreground": "#b78787"
      }
    },
    {
      "scope": "string.parentheses.content.djvc",
      "settings": {
        "foreground": "#955e5e"
      }
    },

    // Other elements
    {
      "scope": "entity.name.uppercase.djvc",
      "settings": {
        "foreground": "#FFA500",
        "fontStyle": "bold"
      }
    },
    {
      "scope": [
        "punctuation.period.djvc",
        "punctuation.comma.djvc",
        "punctuation.2pts.djvc",
        "punctuation.apostrph.djvc"
      ],
      "settings": {
        "foreground": "#FF0000",
        "fontStyle": "bold"
      }
    },
    {
      "scope": [
        "markup.heading.djvc",
        "markup.heading.title.djvc",
        "entity.name.section.djvc"
      ],
      "settings": {
        "foreground": "#56cdd6",
        "fontStyle": "bold"
      }
    },
    {
      "scope": "markup.bold",
      "settings": {
        "foreground": "#569CD6",
        "fontStyle": "bold"
      }
    },
    {
      "scope": "markup.italic",
      "settings": {
        "foreground": "#CE9178",
        "fontStyle": "italic"
      }
    },
    {
      "scope": "markup.list",
      "settings": {
        "foreground": "#6796E6"
      }
    },
    {
      "scope": "markup.underline.link",
      "settings": {
        "foreground": "#4EC9B0"
      }
    },
    {
      "scope": "entity.name.number.djvc",
      "settings": {
        "foreground": "#7eba2f"
      }
    }
  ]
}
