{
  "name": "DJVC Theme",
  "type": "dark",
  "colors": {
    "editor.foreground": "#A9A9A9" // Set text color to dark grey
  },
  "tokenColors": [
    {
      "scope": "punctuation.period.djvc",
      "settings": {
        "foreground": "#FF0000"
      }
    },
    {
      "scope": "punctuation.comma.djvc",
      "settings": {
        "foreground": "#00FF00"
      }
    },
    {
      "scope": "punctuation.2pts.djvc",
      "settings": {
        "foreground": "#d94eff"
      }
    },
    {
      "scope": "punctuation.apostrph.djvc",
      "settings": {
        "foreground": "#b301ff"
      }
    },
    {
      "scope": "punctuation.parenthesis.djvc",
      "settings": {
        "foreground": "#00b9ec"
      }
    },
    {
      "scope": [
        "markup.heading",
        "markup.heading.markdown",
        "markup.heading.setext.1.markdown",
        "markup.heading.setext.2.markdown",
        "markup.heading.atx.markdown"
      ],
      "settings": {
        "foreground": "#569CD6",
        "fontStyle": "bold"
      }
    },
    {
      "scope": [
        "markup.heading.djvc",
        "markup.heading.title.djvc",
        "entity.name.section.djvc"
      ],
      "settings": {
        "foreground": "#569CD6",
        "fontStyle": "bold"
      }
    },
    {
      "scope": "entity.name.uppercase.djvc",
      "settings": {
        "foreground": "#FFA500",
        "fontStyle": "bold"
      }
    },
    {
      "scope": "markup.bold",
      "settings": {
        "foreground": "#569CD6",
        "fontStyle": "bold"
      }
    },
    {
      "scope": "markup.italic",
      "settings": {
        "foreground": "#CE9178",
        "fontStyle": "italic"
      }
    },
    {
      "scope": "markup.list",
      "settings": {
        "foreground": "#6796E6"
      }
    },
    {
      "scope": "markup.underline.link",
      "settings": {
        "foreground": "#4EC9B0"
      }
    },
    {
      "scope": ["string.quoted.single.djvc", "string.quoted.double.djvc"],
      "settings": {
        "foreground": "#FFFF00" // Color for text between quotation marks
      }
    },
    {
      "scope": "meta.parentheses.djvc",
      "settings": {
        "foreground": "#FFA500" // Color for text between parentheses
      }
    }
  ]
}
