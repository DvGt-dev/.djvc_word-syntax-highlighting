{
  "name": "DJVC Theme",
  "type": "dark",
  "colors": {
    "editor.foreground": "#808080"
  },
  "tokenColors": [
    {
      "scope": "punctuation.period.djvc",
      "settings": {
        "foreground": "#FF0000"
      }
    },
    {
      "scope": "punctuation.comma.djvc",
      "settings": {
        "foreground": "#00FF00"
      }
    },
    {
      "scope": "punctuation.2pts.djvc",
      "settings": {
        "foreground": "#d94eff"
      }
    },
    {
      "scope": "punctuation.apostrph.djvc",
      "settings": {
        "foreground": "#b301ff"
      }
    },
    {
      "scope": "punctuation.parenthesis.djvc",
      "settings": {
        "foreground": "#00b9ec"
      }
    },
    {
      "scope": [
        "markup.heading",
        "markup.heading.markdown",
        "markup.heading.setext.1.markdown",
        "markup.heading.setext.2.markdown",
        "markup.heading.atx.markdown"
      ],
      "settings": {
        "foreground": "#569CD6",
        "fontStyle": "bold"
      }
    },
    {
      "scope": [
        "markup.heading.djvc",
        "markup.heading.title.djvc",
        "entity.name.section.djvc"
      ],
      "settings": {
        "foreground": "#569CD6",
        "fontStyle": "bold"
      }
    },
    {
      "scope": "entity.name.uppercase.djvc",
      "settings": {
        "foreground": "#FFA500",
        "fontStyle": "bold"
      }
    },
    {
      "scope": "markup.bold",
      "settings": {
        "foreground": "#569CD6",
        "fontStyle": "bold"
      }
    },
    {
      "scope": "markup.italic",
      "settings": {
        "foreground": "#CE9178",
        "fontStyle": "italic"
      }
    },
    {
      "scope": "markup.list",
      "settings": {
        "foreground": "#6796E6"
      }
    },
    {
      "scope": "markup.underline.link",
      "settings": {
        "foreground": "#4EC9B0"
      }
    },
    {
      // Removed "string.quoted.single.djvc" from the scope
      "scope": "string.quoted.double.djvc",
      "settings": {
        "foreground": "#FFFF00" // Color for text between quotation marks
      }
    },
    {
      "scope": "meta.parentheses.djvc",
      "settings": {
        "foreground": "#FFA500" // Color for text between parentheses
      }
    },
    {
      "scope": "punctuation.definition.quote.begin.djvc",
      "settings": {
        "foreground": "#FF0000" // Color for «
      }
    },
    {
      "scope": "punctuation.definition.quote.end.djvc",
      "settings": {
        "foreground": "#0000FF" // Color for »
      }
    },
    {
      "scope": "string.quoted.double.french.djvc",
      "settings": {
        "foreground": "#FFFF00" // Color for text inside «»
      }
    },
    {
      "scope": "punctuation.definition.group.begin.djvc",
      "settings": {
        "foreground": "#FF0000" // Color for (
      }
    },
    {
      "scope": "punctuation.definition.group.end.djvc",
      "settings": {
        "foreground": "#0000FF" // Color for )
      }
    },
    {
      "scope": "meta.group.djvc",
      "settings": {
        "foreground": "#FFFF00" // Color for text inside parentheses
      }
    }
  ]
}
